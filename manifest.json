{
  "manifest_version": 3,
  "name": "Want to Listen",
  "author": "The Digs.fm team",
  "version": "0.4",
  "description": "Quickly add releases from various music sites to your 'Want to Listen' list on Digs.fm",
  "homepage_url": "https://digs.fm",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": ["https://digs.fm/queued/add-from-extension"],
  "permissions": ["activeTab"],

  "action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Want to Listen",
    "browser_style": true
  }
}
